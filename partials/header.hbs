<header class="site-header">
	<div class="inner-wide">
		{{#if @blog.logo}}
		<p class="site-logo"><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a></p>
		{{/if}}
		{{#is "index"}}
		<h1 class="site-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
		{{else}}
		<p class="site-title"><a href="{{@blog.url}}">{{@blog.title}}</a></p>
		{{/is}}
		{{#if @blog.navigation}}
			{{navigation}}
		{{/if}}
        <a href="http://www.mercimax.com/" target="_blank">
            <div class="menu-goto">
                J'ai besoin d'un Max
            </div>
        </a>
        {{#if false}}
			<a class="spanidebar-toggle"><span class="screen-reader-text">Open Sidebar</span><span class="icon" aria-hidden="true"></span></a>
		{{/if}}
	</div><!-- .inner-wide -->
</header><!-- .site-header -->
